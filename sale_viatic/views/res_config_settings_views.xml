<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.viatic</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Viatics" string="Viatics" data-key="viatics_management" groups="sale_viatic.group_viatic_manager">
                    <h2>Viatic Product</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    <label for="viatic_product"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="viatic_product"/>
                                </div>
                        </div>
                        
                        
                    </div>
                    <h2>Fee And Tax</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    
                                    <field name="viatic_fee"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="viatic_fee"/>
                                </div>
                            
                        </div>
                        
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                    <field name="viatic_tax"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    
                                    <label for="viatic_tax"/>
                                </div>
                            
                        </div>
                        
                    </div>
                   
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_viatic_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'viatics_management'}</field>
    </record>



   

        
        <menuitem id="menu_viatic_config_settings"
                name="Configuration"
                parent="viatic_menu_root"
                sequence="6"
                groups="group_viatic_manager"/>

        <menuitem id="menu_viatic_general_settings" name="Settings" parent="menu_viatic_config_settings"
            sequence="0" action="action_viatic_config_settings" groups="base.group_system"/>

</odoo>
